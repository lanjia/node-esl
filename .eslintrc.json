{
  "env": {
      "es6": true,
      "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
  },
  "plugins": ["babel"],
  "rules": {
      "no-control-regex": 0,
      "eol-last": ["error", "always"],
      "semi": ["error", "never"],
      "no-extra-semi": 2,
      "eqeqeq": 2,
      "camelcase": 2,
      "quotes": [ "error", "single" ]
  }
}
